<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WaitingRoomActivity">

    <ImageView
        android:id="@+id/waiting_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/background"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/bg" />

    <ImageView
        android:id="@+id/waiting_room_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/window"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/window" />

    <TextView
        android:id="@+id/waiting_room_number"
        android:layout_width="275dp"
        android:layout_height="42dp"
        android:contentDescription="@string/room_number"
        android:fontFamily="@font/krona_one"
        android:text="@string/room_1234"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@id/waiting_room_window"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038" />

    <TextView
        android:id="@+id/waiting_player_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/krona_one"
        android:text="@string/players"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/waiting_room_window"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/waiting_room_window"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12" />

    <ImageView
        android:id="@+id/waiting_player_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/waiting_room_window"
        app:layout_constraintEnd_toEndOf="@id/waiting_room_window"
        app:layout_constraintStart_toStartOf="@id/waiting_room_window"
        app:layout_constraintTop_toTopOf="@id/waiting_room_window"
        app:layout_constraintVertical_bias="0.201"
        app:srcCompat="@drawable/table" />

    <ImageView
        android:id="@+id/waiting_icon_player_1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="375dp"
        android:layout_marginBottom="84dp"
        app:layout_constraintBottom_toBottomOf="@+id/waiting_player_1"
        app:layout_constraintEnd_toEndOf="@id/waiting_player_1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/waiting_player_1"
        app:layout_constraintTop_toTopOf="@+id/waiting_player_1"
        app:layout_constraintVertical_bias="0.128"
        app:srcCompat="@drawable/astro_1" />

    <TextView
        android:id="@+id/waiting_player_1_name"
        android:layout_width="136dp"
        android:layout_height="55dp"
        android:contentDescription="@string/player_1_name"
        android:fontFamily="@font/krona_one"
        android:text="Damas"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/waiting_player_1"
        app:layout_constraintEnd_toEndOf="@id/waiting_player_1"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="@id/waiting_player_1"
        app:layout_constraintTop_toTopOf="@+id/waiting_player_1"
        app:layout_constraintVertical_bias="0.488" />

    <ImageButton
        android:id="@+id/waiting_ok_btn_player_1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@null"
        android:contentDescription="@string/ok_btn"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/waiting_player_1"
        app:layout_constraintEnd_toEndOf="@+id/waiting_player_1"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@+id/waiting_player_1"
        app:layout_constraintTop_toBottomOf="@+id/waiting_player_title"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/ok_btn" />

    <ImageView
        android:id="@+id/waiting_player_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/waiting_room_window"
        app:layout_constraintEnd_toEndOf="@+id/waiting_room_window"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/waiting_room_window"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.368"
        app:srcCompat="@drawable/table" />

    <ImageView
        android:id="@+id/waiting_icon_player_2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="375dp"
        android:layout_marginBottom="84dp"
        app:layout_constraintBottom_toBottomOf="@+id/waiting_player_2"
        app:layout_constraintEnd_toEndOf="@id/waiting_player_2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/waiting_player_2"
        app:layout_constraintTop_toTopOf="@+id/waiting_player_2"
        app:layout_constraintVertical_bias="0.231"
        app:srcCompat="@drawable/astro_2" />

    <ImageView
        android:id="@+id/waiting_player_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/waiting_room_window"
        app:layout_constraintEnd_toEndOf="@+id/waiting_room_window"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/waiting_room_window"
        app:layout_constraintVertical_bias="0.535"
        app:srcCompat="@drawable/table" />

    <ImageView
        android:id="@+id/waiting_icon_player_3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="375dp"
        android:layout_marginBottom="84dp"
        app:layout_constraintBottom_toBottomOf="@+id/waiting_player_3"
        app:layout_constraintEnd_toEndOf="@id/waiting_player_3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/waiting_player_3"
        app:layout_constraintTop_toTopOf="@+id/waiting_player_3"
        app:layout_constraintVertical_bias="0.202"
        app:srcCompat="@drawable/astro_3" />

    <ImageView
        android:id="@+id/waiting_player_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/waiting_room_window"
        app:layout_constraintEnd_toEndOf="@+id/waiting_room_window"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/waiting_room_window"
        app:layout_constraintTop_toTopOf="@+id/waiting_room_window"
        app:layout_constraintVertical_bias="0.702"
        app:srcCompat="@drawable/table" />

    <ImageView
        android:id="@+id/waiting_icon_player_4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="375dp"
        android:layout_marginBottom="84dp"
        app:layout_constraintBottom_toBottomOf="@+id/waiting_player_4"
        app:layout_constraintEnd_toEndOf="@id/waiting_player_4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/waiting_player_4"
        app:layout_constraintTop_toTopOf="@+id/waiting_player_4"
        app:layout_constraintVertical_bias="0.188"
        app:srcCompat="@drawable/astro_4" />

    <EditText
        android:id="@+id/waiting_join_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/krona_one"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:text="@string/join_room"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.918" />

    <ImageButton
        android:id="@+id/waiting_join_room_btn"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:background="@null"
        android:contentDescription="@string/join_room"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.928"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.936"
        app:srcCompat="@drawable/forward_btn" />

</android.support.constraint.ConstraintLayout>